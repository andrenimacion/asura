

<div class=" logCont animated fadeInDownBig fast" >
    @{ 
        if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-info">@ViewBag.Message</div>
        }
    }
    <div class="titles text-right p-4" >
        <h1>Login!</h1>
        <h5 class="rapidNote">
            <span class="icon-ok-3"></span>  @ViewBag.LogMesage
        </h5>

    </div>
    <div class="form p-4 animated fadeIn">
        <form action="~/" method="POST">
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email"
                       class="form-control"
                       id="exampleInputEmail1"
                       name="email"
                       aria-describedby="emailHelp" required>
                @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password"
                       class="form-control"
                       name="password"
                       id="exampleInputPassword1">
            </div>
            @*<div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
                <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>*@
            <button type="submit" class="btn btn-primary"  @Html.ActionLink( "Acount", "Index")>
            <span class="icon-accessibility"></span>  Ingresar</button>
        </form>
        <div class="eye">
            <span class="icon-ok-2"></span> Si no tienes una cuenta puedes crearla @Html.ActionLink("Aquí", "SignIn", "Home")
        </div>
    </div>

</div>
