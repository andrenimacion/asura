<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    
    <meta charset="utf-8" />
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://fonts.googleapis.com/css2?family=Comfortaa&family=Saira+Condensed:wght@300&display=swap"
          rel="stylesheet">

    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    
    @Styles.Render("~/Content/iconos/fontello/css/animation.css")
    @Styles.Render("~/Content/Login.css")
    @Styles.Render("~/Content/animated.css")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap.css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/General/General.css")
    
</head>

<body>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
    @RenderSection("scripts", required: false)
</body>
</html>
